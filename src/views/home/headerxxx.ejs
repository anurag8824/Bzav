<style>
    /* Modal Style */
    .modal {
      display: none; 
      position: fixed; 
      z-index: 1; 
      left: 0;
      top: 0;
      width: 100%; 
      height: 100%; 
      overflow: auto; 
      background-color: rgb(0,0,0); 
      background-color: rgba(0,0,0,0.4); 
      padding-top: 60px;
    }
    
    .modal-content {
      background-color: #fefefe;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
    }
    
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
    }
    
    .close:hover,
    .close:focus {
      color: black;
      text-decoration: none;
      cursor: pointer;
    }
  </style>
  <style>
    /* Background overlay */
    .referral-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.75);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 9999;
    }
  
    /* Modal box */
    .referral-box {
      background: #0f1d33;
      padding: 25px;
      width: 100%;
      
      border-radius: 20px;
      text-align: center;
      box-shadow: 0 0 25px rgba(0, 255, 140, 0.4);
      border: 3px solid #00ff88;
      animation: fadeIn 0.3s ease-out;
    }
  
    /* Close button */
    .referral-close {
      float: right;
      font-size: 28px;
      cursor: pointer;
      color: #00ff88;
      transition: 0.2s;
    }
  
    .referral-close:hover {
      color: #00ffaa;
    }
  
    /* Title */
    .referral-title {
      margin-top: 10px;
      font-size: 1.4rem;
      font-weight: 700;
      color: #00ffb3;
      text-shadow: 0 0 8px rgba(0,255,130,0.7);
    }
  
    /* Input */
    .referral-input {
      width: 100%;
      margin-top: 15px;
      padding: 12px;
      border-radius: 10px;
      border: 2px solid #00ff88;
      background: #0b1729;
      color: #00ffcc;
      font-size: 1rem;
      text-align: center;
      outline: none;
    }
  
    /* Button */
    .referral-btn {
      margin-top: 18px;
      width: 100%;
      padding: 12px;
      font-weight: 700;
      border: none;
      border-radius: 12px;
      background: linear-gradient(135deg, #00ff88, #00dd66);
      color: #082016;
      cursor: pointer;
      font-size: 1.1rem;
      box-shadow: 0 0 12px rgba(0,255,120,0.7);
      transition: 0.2s;
    }
  
    .referral-btn:hover {
      box-shadow: 0 0 18px rgba(0,255,120,1);
      transform: translateY(-2px);
    }
  
    /* Animation */
    @keyframes fadeIn {
      from { opacity: 0; transform: scale(0.9); }
      to { opacity: 1; transform: scale(1); }
    }
  </style>
